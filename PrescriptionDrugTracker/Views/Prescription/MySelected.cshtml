@{
}

<h1>My Medications</h1>

<table>
    <tr>
        <th>Name of Medication</th>
        <th>Tier (1-3; lower is cheaper)</th>
        <th>Set Refill Information</th>
    </tr>
    @foreach(Prescription p in ViewBag.mydruglist)
    {
        <tr>
            <th>@p.DrugName</th>
            <th>@p.Tier</th>
            <th><a asp-controller="Prescription" asp-action="SetExpiration"
            asp-route-drugname="@p.DrugName"> 
                Set expiration information</a></th>
        </tr>
    }
</table>

<a asp-controller="Prescription" asp-action="SelectMeds">
    Select another medication</a>
<br /><br />

<a asp-controller="Prescription" asp-action="ViewUserProfile">
    See my expiration information</a>