<h1>List of All Selectable Medications</h1>
<br />

<table>
    <tr>
        <th>Name of Medication</th>
        <th>Tier (1-3; lower is cheaper)</th>
    </tr>
    @foreach(Prescription p in ViewBag.druglist)
    {
        <tr>
            <th>@p.DrugName</th>
            <th>@p.Tier</th>
        </tr>
    }
</table>
<br /><br />

<a asp-controller="Prescription" asp-action="SelectMeds">
    Select a Medication to add to your List</a>